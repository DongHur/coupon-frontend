@require "helpers"

*
    box-sizing border-box

#signup-form-wrapper
    margin 0 auto
    max-width 800px
    text-align center

#signup-form
    width 80%
    margin 0 auto
    input
        display block
        width 100%
        line-height 2rem
        border-radius 5px
        padding 5px
        border 1px solid #888
    select
        display block
        width 50%
        padding 10px 5px
    button
        margin 0 auto
        padding 20px
        min-width 20%
        border-radius 5px
        border 0

.form-input
    font-size 18px
    margin-bottom 10px
