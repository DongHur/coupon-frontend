@require "helpers"

*
    box-sizing border-box
html, body
    height 100%

#signup-form
    width 90%
    max-width 600px
    margin 0 auto
    text-align center
    input
        display block
        width 100%
        line-height 2rem
        border-radius 5px
        padding 5px
        border 1px solid #888
    select
        display block
        width 50%
        padding 10px 5px
    button
        margin 0 auto
        padding 20px
        min-width 20%
        border-radius 5px
        border 0
.form-input
    font-size 18px
    margin-bottom 10px

#error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    margin 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center
