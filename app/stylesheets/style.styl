@require "helpers"

*
    box-sizing border-box
html, body
    height 100%

#signup-form
    width 90%
    max-width 600px
    margin 0 auto
.form-input
    display block
    width 100%
    margin-bottom 10px
    padding 5px
    border-radius 5px
    border 1px solid #888
    font-size 18px
    line-height 2rem
.button
    margin 0 auto
    width auto
    min-width 20%
    padding 20px
    border-radius 5px
    border 0
    background-color rgb(200, 200, 200)
    cursor pointer
.button:hover
    background-color rgb(220, 220, 220)
    background-color rgba(200, 200, 200, .7)
.half
    display block
    width 100%

@media only screen and (min-width: 600px)
    .half
        display inline-block
        width 50%


#error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    margin 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center
